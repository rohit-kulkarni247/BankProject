  <div class="jumbotron">
    <h1 class="display-4">Add Money to MagicPay Balance</h1>
    <form action="/addmoney" method="post">
      <p class="lead">Available Balance: ₹ <%=bal%></p>
      <hr class="my-4">
      <div class="input-group input-group-lg">

        <input type="number" name="value1" class="form-control" placeholder="₹ Amount" autofocus>
      </div>

  </div>
  <button type="submit" class="btn btn-outline-success b1 btn-lg">Proceed</button>
  </form>

